<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.dao.PaperDao">
<!--    The attributes are corresponding to the attributes in the database-->
    <resultMap type="com.alibaba.pojo.Paper" id="paperResultMap" >
        <id property="paperId" column="paper_id"/>
        <id property="userId" column="user_id"/>
        <result property="paperName" column="name"/>
        <result property="paperNum" column="number"/>
        <result property="paperDetail" column="detail"/>
    </resultMap>

    <insert id="addPaper" parameterType="com.alibaba.pojo.Paper">
        INSERT INTO paper(paper_id,user_id,name,number,detail) VALUE (#{paperId},#{userId},#{paperName}, #{paperNum}, #{paperDetail})
    </insert>

    <delete id="deletePaperById" parameterType="long">
        DELETE FROM paper WHERE paper_id=#{paperID}
    </delete>

    <update id="updatePaper" parameterType="com.alibaba.pojo.Paper">
        UPDATE paper
        SET NAME = #{paperName}, NUMBER = #{paperNum},detail = #{paperDetail}
        WHERE  paper_id = #{paperId}
    </update>

    <select id="queryById" resultType="com.alibaba.pojo.Paper" parameterType="long">
        SELECT paper_id as paperId, user_id as userId, name as paperName, number as paperNum, detail as paperDetail
        FROM paper
        WHERE paper_id = #{paperId}
    </select>

    <select id="queryByName" resultType="com.alibaba.pojo.Paper" parameterType="String">
        SELECT paper_id as paperId, user_id as userId, name as paperName, number as paperNum, detail as paperDetail
        FROM paper
        WHERE name = #{paperName}
    </select>

    <select id="queryAllPaper" resultMap="paperResultMap">
        SELECT paper_id,uers_id,name,number,detail
        FROM paper
    </select>

    <select id="queryAllPaperByuserID" resultMap="paperResultMap" parameterType="long">
        SELECT paper_id, user_id, name, number,detail
        FROM paper
        WHERE user_id = #{userId}
    </select>

</mapper>